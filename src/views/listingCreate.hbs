


<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
    color: #333;
    margin: 0;
    padding: 0;
  }

  .content {
    max-width: 800px;
    margin: 20px auto;
    background: #fff;
    padding: 20px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
  }

  h1 {
    text-align: center;
    color: #4a90e2;
    margin-bottom: 20px;
  }

  form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  form div {
    display: flex;
    flex-direction: column;
  }

  label {
    font-weight: bold;
    margin-bottom: 5px;
    color: #555;
  }

  input[type="text"],
  input[type="number"],
  input[type="email"],
  input[type="date"],
  input[type="file"],
  select {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
    background-color: #f9f9f9;
    color: #333;
  }

  input[type="text"]:focus,
  input[type="number"]:focus,
  input[type="email"]:focus,
  input[type="date"]:focus,
  input[type="file"]:focus,
  select:focus {
    border-color: #4a90e2;
    outline: none;
    background-color: #fff;
  }

  #imagePreview {
    display: none;
    max-width: 100%;
    height: auto;
    margin-top: 10px;
  }

  .full-width-button {
    grid-column: span 2;
    padding: 15px 20px;
    background-color: #4a90e2;
    border: none;
    border-radius: 4px;
    color: white;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    margin-top: 20px;
    width: 100%;
    text-align: center;
    transition: background-color 0.3s ease;
  }

  .full-width-button:hover {
    background-color: #357abd;
  }

  @media (max-width: 600px) {
    form {
      grid-template-columns: 1fr;
    }

    .full-width-button {
      grid-column: span 1;
    }
  }
</style>

{{> sidebar}}
<div class="content">
  <h1>{{message}}</h1>
  <form action="/trpc/listingCreate" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div>
      <label for="listingId">Listing ID:</label>
      <input type="number" id="listingId" name="listingId" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <input type="text" id="description" name="description" required>
    </div>
    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div>
      <label for="expirationDate">Expiration Date:</label>
      <input type="date" id="expirationDate" name="expirationDate" required>
    </div>
    <div>
      <label for="groupName">Group Name:</label>
      <input type="text" id="groupName" name="groupName">
    </div>
    <div>
      <label for="dollarsOff">Dollars Off:</label>
      <input type="text" id="dollarsOff" name="dollarsOff">
    </div>
    <div>
      <label for="amountRequiredToQualify">Amount Required to Qualify:</label>
      <input type="text" id="amountRequiredToQualify" name="amountRequiredToQualify">
    </div>
    <div>
      <label for="percentOff">Percent Off:</label>
      <input type="text" id="percentOff" name="percentOff">
    </div>
    <div>
      <label for="itemName">Item Name:</label>
      <input type="text" id="itemName" name="itemName">
    </div>
    <div>
      <label for="percentOffFor">Percent Off For:</label>
      <input type="text" id="percentOffFor" name="percentOffFor">
    </div>
    <div>
      <label for="couponType">Coupon Type:</label>
      <select id="couponType" name="couponType" required>
        <option value="percent">% off</option>
        <option value="offers">Offers</option>
        <option value="dollar">$ off</option>
      </select>
    </div>
    <div>
      <label for="image">Upload Image:</label>
      <input type="file" id="image" name="image" accept="image/*" required onchange="previewImage(event)">
    </div>
    <div>
      <img id="imagePreview" src="#" alt="Image Preview" style="display:none; max-width:100%; height:auto; margin-top:10px;">
    </div>
    <div>
      <button type="submit" class="full-width-button">Create Listing</button>
    </div>
  </form>
</div>

<script>
  function validateForm() {
    const imageInput = document.getElementById('image');
    if (!imageInput.files.length) {
      alert('Please attach an image before submitting.');
      return false;
    }
    return true;
  }

  function previewImage(event) {
    const reader = new FileReader();
    reader.onload = function() {
      const output = document.getElementById('imagePreview');
      output.src = reader.result;
      output.style.display = 'block';
    };
    reader.readAsDataURL(event.target.files[0]);
  }
</script>
